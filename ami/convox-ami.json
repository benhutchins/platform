{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-c5fa5aae",
      "instance_type": "t2.micro",
      "vpc_id": "vpc-5fa0b63a",
      "subnet_id": "subnet-96275fcf",
      "ssh_username": "ec2-user",
      "communicator": "ssh",
      "ssh_pty": true,
      "ami_name": "Good Eggs ECS Image ({{isotime \"2006-01-02\"}})",
      "user_data_file": "user_data.sh"
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "echo wait for scp to install; sleep 30"
    },
    {
      "type": "file",
      "source": "logspout-start-task.conf",
      "destination": "/home/ec2-user/logspout-start-task.conf"
    },
    {
      "type": "shell",
      "inline": [
        "# yum update",
        "sudo yum update -y",
        "sudo yum install -y aws-cli jq",

        "# Install logspout-ecs-task.sh",
        "sudo mv {/home/ec2-user,/etc/init}/logspout-start-task.conf",

        "# Reset cloud-init",
        "sudo rm -rf /var/lib/cloud/{sem,instance,instances/*}",

        "# Remove all ECS execution traces added while running packer",
        "sudo stop ecs 2> /dev/null || true",
        "sudo docker rm ecs-agent 2> /dev/null || true",
        "sudo rm -rf /var/log/ecs/* /var/lib/ecs/data/*"
      ]
    }
  ]
}
